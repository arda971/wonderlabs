extends layout

block content
  .container
    .col-md-6.col-md-offset-3
       - var amount = 0
       h1= product.name
       h2='$ '+ product.price
       h3=product.description
       h4= amount
       button.btn.btn-primary(onclick='add_to_cart('#{product.id}','#{product.price}')') Add to Cart
