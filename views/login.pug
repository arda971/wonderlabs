extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2= title

        // sign in form
        div.form-group
          a.btn.btn-primary.btnD(href='/auth/facebook') Facebook

        div.form-group
          a.btn.btn-danger.btnD(href='/auth/google') Google
        div.form-group
            a.btn.btn-info.btnD(href='/auth/signin') Email
        div.form-group
          a.btn.black-back.btnD(href='/auth/register') New User
        div.form-group
            a.btn.btn-info.btnD(href='/auth/forgot') Recover Password
